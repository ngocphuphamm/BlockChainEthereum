	uint256 public _maxTokenSale;
	uint256 public _saledToken;
	bool public _saleStatus;
	uint256 public _tokenPrice;  // token pre-sale price in BUSD
	uint256 public _endSaleBlock ;
	uint256 public _openSaleBlock ;
	uint256 public _countBuyer;
	uint256 public _countFunder;
	uint[10] public _openBlockArr;

    address public _receivePrivateSaleAddress;
	address public _internalRefAddress;

    mapping(address => uint256) public buyedToken;
	mapping(address => uint256) public buyedBUSD;
	mapping(address => uint256) public claimedPercent;
    
    constructor(address _token) public {
		_BUSD = IERC20(address(0xe9e7CEA3DedcA5984780Bafc599bD69ADd087D56));
        _receivePrivateSaleAddress = address(msg.sender);
		_tokenSales = SQFToken(_token) ;
		_maxTokenSale = _totalSupply.mul(3).div(100);
		_saledToken = 0;
		_saleStatus = true;
		_tokenPrice = 42* 10** 12;
        _openSaleBlock = block.timestamp.add(( 12* 3600 ) + 1200);
		_endSaleBlock = _openSaleBlock.add(14*24*3600);
		_openBlockArr[0] = _endSaleBlock.add(24*3600);
		_openBlockArr[1] = _endSaleBlock.add(31*24*3600);
		_openBlockArr[2] = _endSaleBlock.add(61*24*3600);
		_openBlockArr[3] = _endSaleBlock.add(91*24*3600);
		_openBlockArr[4] = _endSaleBlock.add(121*24*3600);
		_openBlockArr[5] = _endSaleBlock.add(151*24*3600);
		_openBlockArr[6] = _endSaleBlock.add(181*24*3600);
		_openBlockArr[7] = _endSaleBlock.add(211*24*3600);
		_openBlockArr[8] = _endSaleBlock.add(241*24*3600);
		_openBlockArr[9] = _endSaleBlock.add(271*24*3600);

	}
	
	function viewAllow() public view returns(uint256) { 
		return _BUSD.allowance(msg.sender,address(this));
	}

	function viewBalance() public view returns(uint256) { 
		return _BUSD.balanceOf(msg.sender);
	}

    function checkCurrentTime() public view returns(uint256) { 
        return block.timestamp;
    }
        
    function setReceivePrivateAddress(address to) public onlyOwner { 
        _receivePrivateSaleAddress = to;
    }

	function setInternalRefAddress(address to) public onlyOwner { 
        _internalRefAddress = to;
    }

	function buyByBUSD( uint256 _amount ) public { 
		require(buyedBUSD[msg.sender].add(_amount) <= 3000 * 10 ** 18, "Limit 3000$ for Private Sales !");
        require(_openSaleBlock < block.timestamp, "Private sale not open this time !");
		require(_endSaleBlock > block.timestamp , "Private sale ended .");
		require(_saledToken < _maxTokenSale , "Token soled out .");
		require( _countBuyer < 1000, "Maximum Buyer !");
		require( _amount >= 10*10**18 ," Minimum BUSD Buy");

		_BUSD.transferFrom(msg.sender, _receivePrivateSaleAddress, _amount);

		uint256 totalToken = _amount.div(_tokenPrice);
		_tokenSales.mintFrozenTokens(address(msg.sender), totalToken * 10 ** 18);  

		if(buyedToken[msg.sender] == 0 )  { 
			_countBuyer++;
		}

		_saledToken = _saledToken.add(totalToken * 10 ** 18);
		buyedToken[msg.sender] = buyedToken[msg.sender].add(totalToken * 10 ** 18);
		buyedBUSD[msg.sender] = buyedBUSD[msg.sender].add(_amount);
		emit BuyPrivateSale(address(msg.sender), totalToken);

	}

	function adminBuyForFunder(address Funder, uint256 _amount) public onlyOwner { 
		require(buyedBUSD[Funder].add(_amount) <= 50000 * 10 ** 18, "Limit 50000$ for Private Sales for Funder !");
 		require(_openSaleBlock < block.timestamp, "Private sale not open this time !");
		require(_endSaleBlock > block.timestamp , "Private sale ended .");
		require(_saledToken < _maxTokenSale , "Token soled out .");
		require( ( _amount >= 10000 * 10 ** 18 ) , "Minimum BUSD Buy");
		require(_countFunder < 20, "Limit 20 Funder");

		uint256 totalToken = _amount.div( _tokenPrice );
		_tokenSales.mintFrozenTokens(Funder, totalToken * 10 ** 18);

		uint256 tokenForRef = (totalToken * 10 ** 18 ).mul(5).div(100);
		_tokenSales.mintFrozenTokens( _internalRefAddress, tokenForRef );
		buyedToken[_internalRefAddress] = buyedToken[_internalRefAddress].add(tokenForRef); 

		if(buyedToken[Funder] == 0) { 
			_countFunder++;
		}

		_saledToken = _saledToken.add(totalToken * 10 ** 18);
		buyedToken[Funder] = buyedToken[Funder].add(totalToken * 10 ** 18);
		buyedBUSD[Funder] = buyedBUSD[Funder].add(_amount);
		emit BuyPrivateSale(Funder,totalToken);

	}


	function checkTimeUnlockPercent () public view returns (uint256){
		uint256 checkNumber = block.timestamp;
		if(checkNumber < _openBlockArr[0]){
			return 0;
		}else if (_openBlockArr[0] <= checkNumber && checkNumber < _openBlockArr[1]){
			return 10;
		}else if (_openBlockArr[1] <= checkNumber && checkNumber < _openBlockArr[2]){
			return 12;
		}else if (_openBlockArr[2] <= checkNumber && checkNumber < _openBlockArr[3]){
			return 23;
		}else if (_openBlockArr[3] <= checkNumber && checkNumber < _openBlockArr[4]){
			return 24;
		}else if (_openBlockArr[4] <= checkNumber && checkNumber < _openBlockArr[5]){
			return 45;
		}else if (_openBlockArr[5] <= checkNumber && checkNumber < _openBlockArr[6]){
			return 56;
		}else if (_openBlockArr[6] <= checkNumber && checkNumber < _openBlockArr[7]){
			return 67;
		}else if (_openBlockArr[7] <= checkNumber && checkNumber < _openBlockArr[8] ){
			return 78;
		}else if (_openBlockArr[8] <= checkNumber && checkNumber < _openBlockArr[9]){
			return 89;
		}else if (_openBlockArr[9] <= checkNumber){
			return 100;
		}
		
	}

	function unlockToken() public returns (bool) {
		uint256 checkPercent = checkTimeUnlockPercent() ;
		require(claimedPercent[msg.sender] < 100, "No locked token");
		require(checkPercent > claimedPercent[msg.sender], "unlock maximum this time");

		uint256 tokenUnlock = buyedToken[msg.sender] * (checkPercent - claimedPercent[msg.sender]) / 100;
		_tokenSales.meltTokens(address(msg.sender), tokenUnlock );
		claimedPercent[msg.sender] = claimedPercent[msg.sender].add( (checkPercent - claimedPercent[msg.sender]) );

		emit Unlock_Token(msg.sender, tokenUnlock);
		return true;
	}

	function set_Price(uint256 tokenPrice) public onlyOwner {
		_tokenPrice = tokenPrice;
	}

	function set_SaleStatus(bool saleStatus) public onlyOwner {
		_saleStatus = saleStatus;
	}
 
    
    event BuyPrivateSale(address indexed user, uint256 amount);
	event Unlock_Token(address indexed user, uint256 amount);

}
